{% layout "mylayout.liquid" %} {% block content %}
<div class="container">
    <a href="/users/{{userID}}/account"><button class="btn btn-info" style="margin-bottom: 10px;">back to account</button></a>
    <div class="row">
        <h1>all products</h1>
    </div>
    <div class="row">
        {% for product in allProducts %}
        <div class="col-3">
            <h6 class="productName">
                <a href="/products/{{userID}}/show/{{product.belongsTo}}/{{forloop.index0}}">{{product.name}}</a>
                <a href="/products/{{userID}}/show/{{product.belongsTo}}/{{forloop.index0}}"><img src="{{product.img}}" alt="{{product.name}} picture" width="80%"></a>
            </h6>
            
        </div>
        
        {% endfor %}
    </div>

</div>
{% endblock %}